<%= simple_form_for(@enquiry) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <div class="col-md-6">
      <%= f.input :first_name, placeholder: 'First name' %>
      <%= f.input :last_name, placeholder: 'Surname name' %>
      <%= f.input :email, placeholder: 'email@youremail.com' %>
    </div>
    <div class="col-md-6">
      <%= f.input :org_type, label: 'Type', collection: ['Government', 'International Organisation', 'Business', 'Foundation', 'Individual'], input_html: {class: 'dd-style'} %>
      <%= f.input :message %>
    </div>
  </div>

  <div class="form-actions">
    <div class="text-center">
      <%= f.submit 'Send Enquiry', class: 'bttn-style' %>
    </div>
  </div>
<% end %>


